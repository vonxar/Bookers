<h1>Editing Book</h1>
<div class="new">
	<% if @book.errors.any? %>
	<div class="error-box">
		<div class="error"><%=  @book.errors.full_messages.length  %>errors prohibited this book from being saved:</div>
		<ul style="color: black">
			<% @book.errors.full_messages.each do |message| %>
			<li class="error-text"><%= message %></li>
				<% end %>
		</ul>
	</div>
	<% end %>
</div>
<!-- form_for部分 -->
<div class="new">
<%= form_for(@book,url:"/books/#{@book.id}") do |f| %>
    <div class="text2"><%= f.label :title ,'Title' %>
    <%= f.text_field :title %></div>
   <div class="text2"><%= f.label :body , 'Body' %>
    <%= f.text_area :body %></div>
    <%= f.submit 'Update Book' %><br>
    <%= link_to 'Show',book_path ,class:"text2" %>
    <%= "|" %>
    <%= link_to 'Back',books_path ,class:"text2" %>
<% end %>
</div>